{% extends 'base.html.twig' %}

{% block title %}Liste des projets{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto py-10 space-y-8">

        <h1 class="text-4xl font-bold text-white mb-6">Liste des projets</h1>

        <div class="overflow-x-auto bg-gray-800 rounded-xl shadow-lg">
            <table class="min-w-full divide-y divide-gray-700">
                <thead class="bg-gray-900">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Nom</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Début</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Fin</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Statut</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Montant</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Client</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Actions</th>
                </tr>
                </thead>

                <tbody class="divide-y divide-gray-700">
                {% for project in projects %}
                    <tr class="hover:bg-gray-700 transition-colors cursor-pointer">
                        <td class="px-6 py-4 text-sm text-gray-300">{{ project.id }}</td>
                        <td class="px-6 py-4 text-sm font-semibold text-white">{{ project.name }}</td>
                        <td class="px-6 py-4 text-sm text-gray-300">{{ project.startDate ? project.startDate|date('d/m/Y') : '-' }}</td>
                        <td class="px-6 py-4 text-sm text-gray-300">{{ project.endDate ? project.endDate|date('d/m/Y') : '-' }}</td>
                        <td class="px-6 py-4">
                            {% set statusColors = {
                                'En cours': 'bg-yellow-500 text-black',
                                'Terminé': 'bg-green-600 text-white',
                                'Annulé': 'bg-red-600 text-white'
                            } %}
                            <span class="px-2 py-1 rounded-full text-xs font-semibold {{ statusColors[project.status]|default('bg-gray-500 text-white') }}">
                                {{ project.status }}
                            </span>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-300">
                            {% if project.isRecurring %}
                                {{ project.calculatedAmount|format_currency(project.currency, app.request.locale ?: 'fr_FR') }}
                            {% else %}
                                {{ project.amount|format_currency(project.currency, app.request.locale ?: 'fr_FR') }}
                            {% endif %}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-300">{{ project.client.name }}</td>
                        <td class="px-6 py-4 text-sm flex space-x-2">
                            <a href="{{ path('app_project_show', {'id': project.id}) }}"
                               class="px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700 transition text-xs">Voir</a>
                            <a href="{{ path('app_project_edit', {'id': project.id}) }}"
                               class="px-3 py-1 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition text-xs">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8" class="px-6 py-4 text-center text-gray-400">Aucun projet trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-6">
            <a href="{{ path('app_project_new') }}"
               class="inline-block px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">Créer un nouveau projet</a>
        </div>

    </div>
{% endblock %}
