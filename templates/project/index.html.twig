{% extends 'base.html.twig' %}

{% block title %}Liste des projets{% endblock %}

{% block body %}
    <div class="w-full mt-10 p-8 bg-white text-gray-900 rounded-xl shadow-xl">

        <h1 class="text-3xl font-bold mb-8">Projets</h1>

        {# Filtre projets #}
        {% include 'components/_filter_project_estimate_form.html.twig' with {'form': filterForm, 'action': path('app_project_index') } %}

        {% if pagination.items is not empty %}
            <div class="overflow-x-auto table-responsive bg-white rounded-xl shadow-xl">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gray-100">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Début</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fin</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Montant</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Client</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                    </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-200">
                    {% for project in pagination.items %}
                        <tr class="hover:bg-gray-50 transition-colors cursor-pointer">
                            <td class="px-6 py-4 text-sm text-gray-700">{{ project.id }}</td>
                            <td class="px-6 py-4 text-sm font-semibold text-gray-900">{{ project.name }}</td>
                            <td class="px-6 py-4 text-sm text-gray-700">{{ project.startDate ? project.startDate|date('d/m/Y') : '-' }}</td>
                            <td class="px-6 py-4 text-sm text-gray-700">{{ project.endDate ? project.endDate|date('d/m/Y') : '-' }}</td>
                            <td class="px-6 py-4">
                                {% set statusColors = {
                                    'in_progress': 'bg-yellow-500 text-black',
                                    'completed': 'bg-green-600 text-white',
                                    'cancelled': 'bg-red-600 text-white'
                                } %}
                                <span class="px-3 py-1 rounded-full text-xs font-semibold {{ statusColors[project.status]|default('bg-gray-400 text-white') }}">
                                {{ project.status|trans }}
                            </span>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-700">
                                {% if project.isRecurring %}
                                    {{ project.calculatedAmount|format_currency(project.currency, app.request.locale ?: 'fr_FR') }}
                                {% else %}
                                    {{ project.amount|format_currency(project.currency, app.request.locale ?: 'fr_FR') }}
                                {% endif %}
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-700">{{ project.client.name }}</td>
                            <td class="px-6 py-4 text-sm">
                                <div class="hidden sm:flex flex-col sm:flex-row gap-2">
                                    <a href="{{ path('app_project_show', {'id': project.id}) }}"
                                       class="px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700 transition text-xs btn-mobile">Voir</a>
                                    <a href="{{ path('app_project_edit', {'id': project.id}) }}"
                                       class="px-3 py-1 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition text-xs btn-mobile">Modifier</a>
                                </div>
                                <div class="sm:hidden">
                                    <details class="relative">
                                        <summary class="inline-flex items-center gap-2 px-3 py-1 text-xs font-semibold rounded bg-gray-100 text-gray-700">
                                            Actions
                                        </summary>
                                        <div class="mt-2 flex flex-col gap-2">
                                            <a href="{{ path('app_project_show', {'id': project.id}) }}"
                                               class="px-3 py-2 rounded bg-blue-600 text-white text-xs">Voir</a>
                                            <a href="{{ path('app_project_edit', {'id': project.id}) }}"
                                               class="px-3 py-2 rounded bg-indigo-600 text-white text-xs">Modifier</a>
                                        </div>
                                    </details>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8" class="px-6 py-4 text-center text-gray-400">Aucun projet trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Pagination #}
            <div class="mt-4 flex flex-wrap justify-center gap-2">
                {% for i in 1..pagination.pages %}
                    <a href="?page={{ i }}"
                       class="px-3 py-1 rounded-lg text-sm font-medium {{ i == pagination.page ? 'bg-blue-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300' }}">
                        {{ i }}
                    </a>
                {% endfor %}
            </div>

            <p class="mt-2 text-center text-gray-500 text-sm">
                Affichage de {{ pagination.items|length }} sur {{ pagination.total }} projets
            </p>
        {% else %}
            <p class="text-gray-500">Aucun projet trouvé.</p>
        {% endif %}

        <div class="mt-6 text-right">
            <a href="{{ path('app_project_new') }}"
               class="inline-block px-6 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition btn-mobile">
                Nouveau projet
            </a>
        </div>

    </div>
{% endblock %}
