{% extends 'base.html.twig' %}

{% block title %}Liste des projets{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold mb-6">Liste des projets</h1>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow">
            <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Nom</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Début</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Fin</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Statut</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Montant</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Client</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Actions</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
            {% for project in projects %}
                <tr class="hover:bg-gray-100 transition-colors cursor-pointer">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ project.id }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">{{ project.name }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ project.startDate ? project.startDate|date('d/m/Y') : '-' }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ project.endDate ? project.endDate|date('d/m/Y') : '-' }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 font-medium">{{ project.status }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">
                        {% if project.isRecurring %}
                            {{ project.calculatedAmount|format_currency(project.currency, app.request.locale ?: 'fr_FR') }}
                        {% else %}
                            {{ project.amount|format_currency(project.currency, app.request.locale ?: 'fr_FR') }}
                        {% endif %}
                    </td>

                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ project.client.name }}</td>
                    {# faire à part  #}

                    {# faire à part  #}
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                        <a href="{{ path('app_project_show', {'id': project.id}) }}" class="text-blue-600 hover:text-blue-900 mr-4">Voir</a>
                        <a href="{{ path('app_project_edit', {'id': project.id}) }}" class="text-indigo-600 hover:text-indigo-900">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="px-6 py-4 text-center text-gray-500">Aucun projet trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-6">
        <a href="{{ path('app_project_new') }}" class="inline-block px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">Créer un nouveau projet</a>
    </div>
{% endblock %}
