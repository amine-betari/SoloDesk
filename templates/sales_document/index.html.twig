{% extends 'base.html.twig' %}

{% block title %}Liste des documents{% endblock %}

{% block body %}
    <div class="w-full px-6 py-8">
        <div class="space-y-6">
            <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
                <div>
                    <h1 class="text-3xl sm:text-4xl font-bold text-white">Devis et factures</h1>
                    <p class="text-sm text-gray-400 mt-2">Centralisez les documents commerciaux et suivez leur statut.</p>
                </div>
                <div class="flex items-center gap-3">
                    <div class="hidden sm:flex items-center gap-2 rounded-full bg-[#1F2732] border border-[#2A3747] px-4 py-2 text-sm text-gray-300">
                        <span class="text-gray-500">Total</span>
                        <span class="text-white font-semibold">{{ pagination.total }}</span>
                    </div>
                    <a href="{{ path('app_sales_document_new') }}"
                       class="inline-flex items-center justify-center px-5 py-3 bg-emerald-500 hover:bg-emerald-600 text-white font-semibold rounded-lg transition-colors btn-mobile">
                        Nouveau document
                    </a>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="rounded-2xl border border-[#2A3747] bg-[#1F2732] p-4">
                    <div class="text-xs uppercase tracking-wider text-gray-400">Documents affichés</div>
                    <div class="mt-2 text-2xl font-semibold text-white">{{ pagination.items|length }}</div>
                </div>
                <div class="rounded-2xl border border-[#2A3747] bg-[#1F2732] p-4">
                    <div class="text-xs uppercase tracking-wider text-gray-400">Documents au total</div>
                    <div class="mt-2 text-2xl font-semibold text-white">{{ pagination.total }}</div>
                </div>
                <div class="rounded-2xl border border-[#2A3747] bg-[#1F2732] p-4">
                    <div class="text-xs uppercase tracking-wider text-gray-400">Page</div>
                    <div class="mt-2 text-2xl font-semibold text-white">{{ pagination.page }} / {{ pagination.pages }}</div>
                </div>
            </div>

            {# Formulaire de filtre clair #}
            {% include 'components/_filter_sales_document_form.html.twig' with {
                'form': filterForm,
                'action': path('app_sales_document_index')
            } %}

            {% if pagination.items is not empty %}
                <div class="overflow-x-auto table-responsive rounded-2xl border border-gray-200 bg-white shadow-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Document</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500 hidden md:table-cell">Client</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Montant</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500 hidden lg:table-cell">TVA</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500 hidden lg:table-cell">Émis le</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Statut</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Actions</th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                        {% for document in pagination.items %}
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="min-w-0">
                                        <div class="text-sm font-semibold text-gray-900">
                                            {{ document.type|document_type_label }}
                                            {% if document.isInvoice() and document.externalInvoice %}
                                                <span class="ml-2 inline-flex items-center rounded-full bg-orange-100 px-2 py-0.5 text-xs font-semibold text-orange-700">
                                                    Externe
                                                </span>
                                            {% endif %}
                                        </div>
                                        <div class="text-xs text-gray-500">#{{ document.reference }}</div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-600 hidden md:table-cell">
                                    {{ document.getResolvedClient() ? document.getResolvedClient().getName() : '–' }}
                                </td>
                                {% if  document.estimate %}
                                    <td class="px-6 py-4 text-sm text-gray-700">
                                        {{ document.getTotalHT|format_currency(document.estimate.currency, app.request.locale ?: 'fr_FR') }}
                                    </td>
                                {% elseif document.project  %}
                                    <td class="px-6 py-4 text-sm text-gray-700">
                                        {{ document.getTotalHT|format_currency(document.project.currency, app.request.locale ?: 'fr_FR') }}
                                    </td>
                                {% else %}
                                    <td class="px-6 py-4 text-sm text-gray-700">
                                        {{ document.getTotalHT|format_currency(document.client.currency, app.request.locale ?: 'fr_FR') }}
                                    </td>
                                {% endif %}
                                <td class="px-6 py-4 text-sm text-gray-600 hidden lg:table-cell">{{ document.taxApplied ? document.vatRate : '–' }}</td>
                                <td class="px-6 py-4 text-sm text-gray-600 hidden lg:table-cell">{{ document.invoiceDate ? document.invoiceDate|date('d/m/Y') : '–' }}</td>
                                {% set color =
                                    document.status == 'draf' ? 'gray' :
                                    document.status == 'sent' ? 'indigo' :
                                    document.status == 'accepted' ? 'green' :
                                    document.status == 'paid' ? 'green' :
                                    document.status == 'rejected' ? 'red' : 'gray'
                                %}
                                <td class="px-6 py-4 text-sm text-gray-700">
                                    <span class="px-2.5 py-1 rounded-full text-xs font-semibold bg-{{ color }}-100 text-{{ color }}-800">
                                         {{ document.status ? document.status|trans : '–' }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-sm">
                                    <div class="hidden sm:flex flex-wrap gap-2">
                                        <a href="{{ path('app_sales_document_show', {'id': document.id}) }}"
                                           class="px-3 py-1.5 rounded-md bg-gray-100 text-gray-700 text-xs font-semibold hover:bg-gray-200 transition">Voir</a>
                                        <a href="{{ path('app_sales_document_edit', {'id': document.id}) }}"
                                           class="px-3 py-1.5 rounded-md bg-blue-600 text-white text-xs font-semibold hover:bg-blue-700 transition">Modifier</a>
                                    </div>
                                    <div class="sm:hidden">
                                        <details class="relative">
                                            <summary class="inline-flex items-center gap-2 px-3 py-1.5 text-xs font-semibold rounded bg-gray-100 text-gray-700">
                                                Actions
                                            </summary>
                                            <div class="mt-2 flex flex-col gap-2">
                                                <a href="{{ path('app_sales_document_show', {'id': document.id}) }}"
                                                   class="px-3 py-2 rounded bg-gray-100 text-gray-700 text-xs font-semibold hover:bg-gray-200">Voir</a>
                                                <a href="{{ path('app_sales_document_edit', {'id': document.id}) }}"
                                                   class="px-3 py-2 rounded bg-blue-600 text-white text-xs font-semibold hover:bg-blue-700">Modifier</a>
                                            </div>
                                        </details>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="px-6 py-10 text-center text-gray-400">Aucun document trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="flex flex-wrap items-center justify-between gap-4">
                    <p class="text-sm text-gray-400">
                        Affichage de {{ pagination.items|length }} sur {{ pagination.total }} documents
                    </p>
                    <div class="flex flex-wrap gap-2">
                        {% for i in 1..pagination.pages %}
                            <a href="?page={{ i }}"
                               class="px-3 py-1.5 rounded-lg text-sm font-medium {{ i == pagination.page ? 'bg-blue-600 text-white' : 'bg-[#223044] text-gray-200 hover:bg-[#2E415B]' }}">
                                {{ i }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <div class="rounded-2xl border border-dashed border-[#2A3747] bg-[#111922] p-10 text-center">
                    <p class="text-gray-400 mb-4">Aucun document trouvé.</p>
                    <a href="{{ path('app_sales_document_new') }}"
                       class="inline-flex items-center justify-center px-5 py-3 bg-emerald-500 hover:bg-emerald-600 text-white font-semibold rounded-lg transition-colors btn-mobile">
                        Créer votre premier document
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
