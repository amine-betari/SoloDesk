{% extends 'base.html.twig' %}

{% block title %}Document : {{ sales_document.reference }}{% endblock %}

{% block body %}
    <div class="w-full px-6 py-8">
        <div class="space-y-6">
            {# Header #}
            <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
                <div>
                    <h1 class="text-3xl sm:text-4xl font-bold text-white">Document : {{ sales_document.reference }}</h1>
                    <p class="text-sm text-gray-400 mt-2">Suivi du document, client, statut et paiements.</p>
                </div>
                <div class="flex flex-col sm:flex-row flex-wrap gap-2 w-full sm:w-auto">
                    <a href="{{ path('app_sales_document_index') }}"
                       class="px-4 py-2 bg-[#223044] rounded hover:bg-[#2E415B] text-white btn-mobile">‚Üê Retour</a>
                    <a href="{{ path('app_sales_document_edit', {'id': sales_document.id}) }}"
                       class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 font-semibold btn-mobile">Modifier</a>
                    {{ include('sales_document/_delete_form.html.twig') }}
                    <a href="{{ path('app_sales_document_generate_word', { id: sales_document.id }) }}"
                       class="px-4 py-2 bg-blue-800 text-white rounded hover:bg-blue-700 btn-mobile">üìù Word</a>
                {# <a href="{{ path('app_sales_document_generate_pdf', { id: sales_document.id }) }}"
                   class="px-4 py-2 bg-gray-700 text-white rounded hover:bg-gray-600">üìÑ PDF</a>
                <a href="{{ path('app_sales_document_generate_excel', { id: sales_document.id }) }}"
                   class="px-4 py-2 bg-green-700 text-white rounded hover:bg-green-800">üìä Excel</a> #}
                {# Afficher le lien uniquement si c'est une facture et s'il y a des paiements #}
                {% if sales_document.isInvoice() or sales_document.isProject() %}
                    {% if sales_document.payments|length > 0 %}
                        <a href="#paiements"
                           class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-500 flex items-center gap-2 w-full sm:w-auto justify-center sm:justify-start">
                            Paiements
                            <span class="ml-2 inline-block bg-white/10 text-white text-xs px-2 py-0.5 rounded">
                                 {{ sales_document.payments|length }}
                            </span>
                        </a>
                    {% endif %}
                {% endif %}

                </div>
            </div>

            {# Informations principales #}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-white p-6 rounded-2xl shadow-md">
                    <h2 class="text-gray-500 font-semibold mb-2">Type</h2>
                    <p class="text-gray-900">{{ sales_document.type|document_type_label }}</p>
                </div>
                {% if sales_document.isInvoice() %}
                    <div class="bg-white p-6 rounded-2xl shadow-md">
                        <h2 class="text-gray-500 font-semibold mb-2">Facture externe</h2>
                        <p class="text-gray-900">{{ sales_document.externalInvoice ? 'Oui' : 'Non' }}</p>
                    </div>
                {% endif %}
                <div class="bg-white p-6 rounded-2xl shadow-md">
                    <h2 class="text-gray-500 font-semibold mb-2">Statut</h2>
                    {% set status_class = sales_document.status == 'paid' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %}
                    <span class="px-3 py-1 rounded-full font-semibold {{ status_class }}">{{ sales_document.status|trans }}</span>
                </div>
                <div class="bg-white p-6 rounded-2xl shadow-md">
                    <h2 class="text-gray-500 font-semibold mb-2">Emis le</h2>
                    <p class="text-gray-900">{{ sales_document.invoiceDate ? sales_document.invoiceDate|date('d/m/Y') : 'N/A' }}</p>
                </div>
                <div class="bg-white p-6 rounded-2xl shadow-md">
                    <h2 class="text-gray-500 font-semibold mb-2">Modifi√© le</h2>
                    <p class="text-gray-900">{{ sales_document.modifiedAt ? sales_document.modifiedAt|date('d/m/Y') : 'N/A' }}</p>
                </div>
                {% if sales_document.project %}
                    <div class="bg-white p-6 rounded-2xl shadow-md">
                        <h2 class="text-gray-500 font-semibold mb-2">Projet Concern√©</h2>
                        <p class="text-gray-900">{{ sales_document.project.name }}</p>
                    </div>
                {% elseif sales_document.estimate %}
                    <div class="bg-white p-6 rounded-2xl shadow-md">
                        <h2 class="text-gray-500 font-semibold mb-2">Devis Concern√©</h2>
                        <p class="text-gray-900"> <a class="text-blue-600 hover:text-blue-500" href="{{ path('app_estimate_show', {'id': sales_document.estimate.id}) }}"> {{ sales_document.estimate.estimateNumber }} </a></p>
                    </div>
                {% endif %}
                <div class="bg-white p-6 rounded-2xl shadow-md">
                    <h2 class="text-gray-500 font-semibold mb-2">Montant</h2>
                    <p class="text-gray-900"><span class="text-gray-500 font-semibold mb-2"> Montant (HT) : </span>
                        {% if sales_document.project %}
                            {{ sales_document.getTotalHT|format_currency(sales_document.client.currency, app.request.locale ?: 'fr_FR') }}
                        {% elseif sales_document.estimate %}
                            {{ sales_document.getTotalHT|format_currency(sales_document.client.currency, app.request.locale ?: 'fr_FR') }}
                        {% else %}
                            {{ sales_document.getTotalHT|format_currency(sales_document.client.currency, app.request.locale ?: 'fr_FR') }}
                        {% endif %}
                    </p>
                    <p class="text-gray-900"><span class="text-gray-500 font-semibold mb-2"> TVA Appliqu√©e : </span> {{ sales_document.taxApplied ? sales_document.vatRate : '‚Äì' }}</p>
                </div>
            </div>

        {# Client #}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-white p-6 rounded-2xl shadow-md">
                <h2 class="text-gray-500 font-semibold mb-2">Client</h2>
                <p class="text-gray-900">{{ sales_document.getResolvedClient() ? sales_document.getResolvedClient().getName() : '‚Äì' }}</p>
            </div>
            <div class="bg-white p-6 rounded-2xl shadow-md">
                <h2 class="text-gray-500 font-semibold mb-2">Email</h2>
                <p class="text-gray-900">{{ sales_document.getResolvedClient() ? sales_document.getResolvedClient().getEmail() : '‚Äì' }}</p>
            </div>
            {% if sales_document.getResolvedClient() and sales_document.getResolvedClient().country %}
                <div class="bg-white p-6 rounded-2xl shadow-md">
                    <h2 class="text-gray-500 font-semibold mb-2">Pays</h2>
                    <p class="text-gray-900">{{ sales_document.getResolvedClient().country }}</p>
                </div>
            {% endif %}
        </div>

        {# Apr√®s la section ‚ÄúClient / Adresse‚Äù ou juste apr√®s le header principal, par exemple #}
        {% if sales_document.isEstimate() %}
            {% if sales_document.estimate and sales_document.estimate.status == 'accepted' %}
                {% set hasInvoice = sales_document.estimate.salesDocuments|filter(doc => doc.isInvoice())|length > 0 %}
                    {% if not hasInvoice %}
                        <div class="mt-2">
                        <a href="{{ path('app_sales_document_from_estimate', {'salesDocument': sales_document.id}) }}"
                           class="px-5 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition btn-mobile">
                            üìÑ Cr√©er une facture depuis ce devis
                        </a>
                    </div>
                {% endif %}
            {% endif %}
        {% endif %}

        {% if sales_document.isInvoice() or sales_document.isProject() %}
            <div id="paiements" class="p-4 bg-white rounded-2xl shadow-md text-gray-900">
                <h3 class="text-lg font-semibold mb-3">Paiements ({{ sales_document.payments|length }})</h3>

                {% if sales_document.payments|length > 0 %}
                    <ul class="space-y-2 text-sm">
                        {% for payment in sales_document.payments %}
                            <li class="flex justify-between items-center bg-gray-50 p-2 rounded">
                                    <div>
                                        <div class="text-xs text-gray-500">
                                            <a href="{{ path('app_payment_show', { id: payment.id }) }}" class="flex-1 flex items-center gap-4 text-gray-900 no-underline hover:underline">
                                            {{ payment.date ? payment.date|date('d/m/Y') : '-' }}
                                            </a>
                                        </div>
                                    </div>
                                    <div class="text-right font-semibold">
                                        {# {{ (payment.amount|default(0))|number_format(2, ',', ' ') }} ‚Ç¨ #}
                                        {% if sales_document.project %}
                                            {{ payment.amount|format_currency(sales_document.project.currency, app.request.locale ?: 'fr_FR') }}
                                        {% else %}
                                            {{ payment.amount|format_currency(sales_document.client.currency, app.request.locale ?: 'fr_FR') }}
                                        {% endif %}
                                    </div>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <div class="text-gray-500">Aucun paiement enregistr√©.</div>
                {% endif %}
            </div>
        {% endif %}

        {# Lignes d'articles #}
        <div>
            {% if sales_document.salesDocumentItems is not empty %}
                {% include 'components/_items_table.html.twig' with {
                    items: sales_document.salesDocumentItems,
                    title: "Lignes d'articles",
                    dark_mode: false
                } %}
            {% else %}
                <div class="bg-white p-6 rounded-2xl shadow-md text-gray-400 text-center">Aucune ligne d'article enregistr√©e.</div>
            {% endif %}
        </div>
        </div>
    </div>
{% endblock %}
