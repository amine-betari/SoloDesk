{% extends 'base.html.twig' %}

{% block title %}Document : {{ sales_document.reference }}{% endblock %}

{% block body %}
    <div class="w-full mt-10 p-8 bg-white text-gray-900 rounded-xl shadow-xl">

        {# Header #}
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold">Document : {{ sales_document.reference }}</h1>
            <div class="flex flex-wrap gap-2">
                <a href="{{ path('app_sales_document_index') }}"
                   class="px-4 py-2 bg-gray-200 rounded hover:bg-gray-300">‚Üê Retour</a>
                <a href="{{ path('app_sales_document_edit', {'id': sales_document.id}) }}"
                   class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Modifier</a>
                {{ include('sales_document/_delete_form.html.twig') }}
                <a href="{{ path('app_sales_document_generate_pdf', { id: sales_document.id }) }}"
                   class="px-4 py-2 bg-gray-700 text-white rounded hover:bg-gray-600">üìÑ PDF</a>
                <a href="{{ path('app_sales_document_generate_word', { id: sales_document.id }) }}"
                   class="px-4 py-2 bg-blue-800 text-white rounded hover:bg-blue-700">üìù Word</a>
                <a href="{{ path('app_sales_document_generate_excel', { id: sales_document.id }) }}"
                   class="px-4 py-2 bg-green-700 text-white rounded hover:bg-green-800">üìä Excel</a>
            </div>
        </div>

        {# Informations principales #}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div class="bg-gray-50 p-6 rounded-lg shadow">
                <h2 class="text-gray-500 font-semibold mb-2">Type</h2>
                <p class="text-gray-900">{{ sales_document.type|document_type_label }}</p>
            </div>
            <div class="bg-gray-50 p-6 rounded-lg shadow">
                <h2 class="text-gray-500 font-semibold mb-2">Statut</h2>
                {% set status_class = sales_document.status == 'paid' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %}
                <span class="px-3 py-1 rounded-full font-semibold {{ status_class }}">{{ sales_document.status|trans }}</span>
            </div>
            <div class="bg-gray-50 p-6 rounded-lg shadow">
                <h2 class="text-gray-500 font-semibold mb-2">Cr√©√© le</h2>
                <p class="text-gray-900">{{ sales_document.createdAt ? sales_document.createdAt|date('d/m/Y') : 'N/A' }}</p>
            </div>
            <div class="bg-gray-50 p-6 rounded-lg shadow">
                <h2 class="text-gray-500 font-semibold mb-2">Modifi√© le</h2>
                <p class="text-gray-900">{{ sales_document.modifiedAt ? sales_document.modifiedAt|date('d/m/Y') : 'N/A' }}</p>
            </div>
            {% if sales_document.project %}
                <div class="bg-gray-50 p-6 rounded-lg shadow col-span-2">
                    <h2 class="text-gray-500 font-semibold mb-2">Projet Concern√©</h2>
                    <p class="text-gray-900">{{ sales_document.project.name }}</p>
                </div>
            {% elseif sales_document.estimate %}
                <div class="bg-gray-50 p-6 rounded-lg shadow col-span-2">
                    <h2 class="text-gray-500 font-semibold mb-2">Devis Concern√©</h2>
                    <p class="text-gray-900"> <a href="{{ path('app_estimate_show', {'id': sales_document.estimate.id}) }}"> {{ sales_document.estimate.estimateNumber }} </a></p>
                </div>
            {% endif %}
        </div>

        {# Client #}
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
            <div class="bg-gray-50 p-6 rounded-lg shadow">
                <h2 class="text-gray-500 font-semibold mb-2">Client</h2>
                <p class="text-gray-900">{{ sales_document.getResolvedClient() ? sales_document.getResolvedClient().getName() : '‚Äì' }}</p>
            </div>
            <div class="bg-gray-50 p-6 rounded-lg shadow">
                <h2 class="text-gray-500 font-semibold mb-2">Email</h2>
                <p class="text-gray-900">{{ sales_document.getResolvedClient() ? sales_document.getResolvedClient().getEmail() : '‚Äì' }}</p>
            </div>
            {% if sales_document.getResolvedClient() and sales_document.getResolvedClient().country %}
                <div class="bg-gray-50 p-6 rounded-lg shadow">
                    <h2 class="text-gray-500 font-semibold mb-2">Pays</h2>
                    <p class="text-gray-900">{{ sales_document.getResolvedClient().country }}</p>
                </div>
            {% endif %}
        </div>

        {# Lignes d'articles #}
        <div class="mb-6">
            {% if sales_document.salesDocumentItems is not empty %}
                {% include 'components/_items_table.html.twig' with {
                    items: sales_document.salesDocumentItems,
                    title: "Lignes d'articles",
                    dark_mode: false
                } %}
            {% else %}
                <div class="bg-gray-50 p-6 rounded-lg shadow text-gray-400 text-center">Aucune ligne d'article enregistr√©e.</div>
            {% endif %}
        </div>

        {# Totaux #}
        {% if sales_document.totalAmount is defined %}
            <div class="bg-gray-50 shadow rounded-lg p-6 flex justify-end space-x-6 text-gray-900 mb-6">
                <div>
                    <h2 class="text-gray-500 font-semibold mb-1">Total HT</h2>
                    <p class="text-lg">{{ sales_document.totalHT|number_format(2, ',', ' ') }} ‚Ç¨</p>
                </div>
                <div>
                    <h2 class="text-gray-500 font-semibold mb-1">TVA</h2>
                    <p class="text-lg">{{ sales_document.totalTVA|number_format(2, ',', ' ') }} ‚Ç¨</p>
                </div>
                <div>
                    <h2 class="text-gray-500 font-semibold mb-1">Total TTC</h2>
                    <p class="text-lg font-bold">{{ sales_document.totalAmount|number_format(2, ',', ' ') }} ‚Ç¨</p>
                </div>
            </div>
        {% endif %}

    </div>
{% endblock %}
