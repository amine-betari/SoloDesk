{% extends 'base.html.twig' %}

{% block title %}Document : {{ sales_document.reference }}{% endblock %}

{% block body %}
    <div class="w-full min-h-screen bg-gray-900 p-6">
        <div class="mx-auto max-w-6xl space-y-8">

            <h1 class="text-3xl font-bold text-white">D√©tails du document</h1>

            {# Infos principales et client #}
            <div class="bg-gray-800 shadow rounded-lg p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <dt class="text-sm font-medium text-gray-400">R√©f√©rence</dt>
                    <dd class="text-lg text-gray-200">{{ sales_document.reference }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-400">Type</dt>
                    <dd class="text-lg text-gray-200">{{ sales_document.type|document_type_label }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-400">Cr√©√© le</dt>
                    <dd class="text-lg text-gray-200">{{ sales_document.createdAt ? sales_document.createdAt|date('d/m/Y') : 'N/A' }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-400">Modifi√© le</dt>
                    <dd class="text-lg text-gray-200">{{ sales_document.modifiedAt ? sales_document.modifiedAt|date('d/m/Y') : 'N/A' }}</dd>
                </div>
                {% if sales_document.project %}
                    <div>
                        <dt class="text-sm font-medium text-gray-400">Projet Concern√©</dt>
                        <dd class="text-lg text-gray-200">{{ sales_document.project }}</dd>
                    </div>
                {% elseif sales_document.estimate %}
                    <div>
                        <dt class="text-sm font-medium text-gray-400">Devis Concern√©</dt>
                        <dd class="text-lg text-gray-200">{{ sales_document.estimate.estimateNumber }}</dd>
                    </div>
                {% endif %}
                <div>
                    <dt class="text-sm font-medium text-gray-400">Statut</dt>
                    {% set status_class = sales_document.status == 'paid' ? 'bg-green-600 text-white' : 'bg-yellow-600 text-white' %}
                    <span class="px-3 py-1 rounded-full font-semibold {{ status_class }}">{{ sales_document.status|trans }}</span>
                </div>
            </div>

            {# Client / Adresse #}
            <div class="bg-gray-800 shadow rounded-lg p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <dt class="text-sm font-medium text-gray-400">Client</dt>
                    <dd class="text-lg text-gray-200">
                        {{ sales_document.getResolvedClient() ? sales_document.getResolvedClient().getName() : '‚Äì' }}
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-400">Email</dt>
                    <dd class="text-lg text-gray-200">
                        {{ sales_document.getResolvedClient() ? sales_document.getResolvedClient().getEmail() : '‚Äì' }}
                    </dd>
                </div>
                {% if sales_document.getResolvedClient() and sales_document.getResolvedClient().country %}
                    <div>
                        <dt class="text-sm font-medium text-gray-400">Pays</dt>
                        <dd class="text-lg text-gray-200">{{ sales_document.getResolvedClient().country }}</dd>
                    </div>
                {% endif %}
            </div>

            {# Lignes d'articles #}
            <div>
                {% if sales_document.salesDocumentItems is not empty %}
                    {% include 'components/_items_table.html.twig' with {
                        items: sales_document.salesDocumentItems,
                        title: "Lignes d'articles",
                        dark_mode: true
                    } %}
                {% else %}
                    <div class="bg-gray-800 shadow rounded-lg p-6 text-gray-400 text-center">Aucune ligne d'article enregistr√©e.</div>
                {% endif %}
            </div>

            {# Totaux si dispo #}
            {% if sales_document.totalAmount is defined %}
                <div class="bg-gray-800 shadow rounded-lg p-6 flex justify-end space-x-6 text-gray-200">
                    <div>
                        <dt class="text-sm font-medium text-gray-400">Total HT</dt>
                        <dd class="text-lg">{{ sales_document.totalHT|number_format(2, ',', ' ') }} ‚Ç¨</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-400">TVA</dt>
                        <dd class="text-lg">{{ sales_document.totalTVA|number_format(2, ',', ' ') }} ‚Ç¨</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-400">Total TTC</dt>
                        <dd class="text-lg font-bold">{{ sales_document.totalAmount|number_format(2, ',', ' ') }} ‚Ç¨</dd>
                    </div>
                </div>
            {% endif %}

            {# Actions #}
            <div class="flex flex-wrap space-x-4 mt-6">
                <a href="{{ path('app_sales_document_index') }}" class="text-sm text-gray-400 hover:underline">‚Üê Retour √† la liste</a>
                <a href="{{ path('app_sales_document_edit', {'id': sales_document.id}) }}" class="text-sm bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-500">Modifier</a>
                {{ include('sales_document/_delete_form.html.twig') }}

                <a href="{{ path('app_sales_document_generate_pdf', { id: sales_document.id }) }}" class="bg-gray-700 text-white px-4 py-2 rounded hover:bg-gray-600">
                    üìÑ T√©l√©charger PDF
                </a>
                <a href="{{ path('app_sales_document_generate_word', { id: sales_document.id }) }}" class="bg-blue-800 text-white px-4 py-2 rounded hover:bg-blue-700">
                    üìù T√©l√©charger Word
                </a>
                <a href="{{ path('app_sales_document_generate_excel', { id: sales_document.id }) }}" class="bg-green-700 text-white px-4 py-2 rounded hover:bg-green-800">
                    üìä T√©l√©charger Excel
                </a>
            </div>

        </div>
    </div>
{% endblock %}
