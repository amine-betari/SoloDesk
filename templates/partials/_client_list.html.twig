{# templates/partials/_client_list.html.twig #}

<div class="bg-white rounded-lg shadow p-6 mt-8 text-gray-900">
    <h3 class="text-2xl font-bold mb-6">Liste des clients</h3>

    <div class="table-responsive">
        <table class="min-w-full divide-y divide-gray-200">
            <thead>
            <tr class="bg-gray-50">
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Email</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Premier Contact</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Pays</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
            {% for client in clients %}
                <tr class="hover:bg-gray-100 transition-colors duration-200 cursor-pointer">
                    <td class="px-6 py-4 whitespace-nowrap">{{ client.name }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ client.email }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ client.firstContactAt ? client.firstContactAt|date('d/m/Y') : '-' }}</td>
                    <td class="px-6 py-4 whitespace-nowrap">{{ client.country }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center py-4 text-gray-500">Aucun client trouv√©</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
