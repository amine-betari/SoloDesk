{% extends 'base.html.twig' %}

{% block title %}Mon entreprise{% endblock %}

{% block body %}
    <div class="w-full max-w-2xl mx-auto mt-16 p-8 bg-white rounded-xl shadow-xl">
        <h1 class="text-3xl font-bold mb-6 text-gray-900">Mon entreprise</h1>

        {{ form_start(form) }}

        <div class="mb-4">
            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'mt-1 w-full p-2 rounded-md border border-gray-300 bg-gray-50 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            <div class="text-sm text-red-600 mt-1">
                {{ form_errors(form.name) }}
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                {{ form_label(form.ice, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.ice, {'attr': {'class': 'mt-1 w-full p-2 rounded-md border border-gray-300 bg-gray-50 text-gray-900'}}) }}
                {{ form_errors(form.ice) }}
            </div>
            <div>
                {{ form_label(form.fiscalId, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.fiscalId, {'attr': {'class': 'mt-1 w-full p-2 rounded-md border border-gray-300 bg-gray-50 text-gray-900'}}) }}
                {{ form_errors(form.fiscalId) }}
            </div>
            <div>
                {{ form_label(form.taxProfessional, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.taxProfessional, {'attr': {'class': 'mt-1 w-full p-2 rounded-md border border-gray-300 bg-gray-50 text-gray-900'}}) }}
                {{ form_errors(form.taxProfessional) }}
            </div>
            <div>
                {{ form_label(form.phone, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.phone, {'attr': {'class': 'mt-1 w-full p-2 rounded-md border border-gray-300 bg-gray-50 text-gray-900'}}) }}
                {{ form_errors(form.phone) }}
            </div>
            <div>
                {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.email, {'attr': {'class': 'mt-1 w-full p-2 rounded-md border border-gray-300 bg-gray-50 text-gray-900'}}) }}
                {{ form_errors(form.email) }}
            </div>
            <div>
                {{ form_label(form.city, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.city, {'attr': {'class': 'mt-1 w-full p-2 rounded-md border border-gray-300 bg-gray-50 text-gray-900'}}) }}
                {{ form_errors(form.city) }}
            </div>
            <div>
                {{ form_label(form.country, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                {{ form_widget(form.country, {'attr': {'class': 'mt-1 w-full p-2 rounded-md border border-gray-300 bg-gray-50 text-gray-900'}}) }}
                {{ form_errors(form.country) }}
            </div>
        </div>

        <div class="mt-4">
            {{ form_label(form.address, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            <div
                class="company-ckeditor"
                data-controller="ckeditor"
                data-ckeditor-toolbar-value='["bold","italic","bulletedList","numberedList","undo","redo"]'
                data-ckeditor-license-key-value="GPL"
            >
                {{ form_widget(form.address, {
                    attr: { 'data-ckeditor-target':'textarea', rows:6, class:'mt-1 w-full rounded-md border-gray-300 bg-white text-gray-900' }
                }) }}
            </div>
            {{ form_errors(form.address) }}
        </div>

        <style>
            .company-ckeditor .ck-content { color: #111827; }
        </style>

        <div class="mt-4">
            {{ form_label(form.logoFile, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.logoFile, {'attr': {'class': 'mt-1 w-full p-2 rounded-md border border-gray-300 bg-gray-50 text-gray-900'}}) }}
            {{ form_errors(form.logoFile) }}
            {% if app.user and app.user.company and app.user.company.logoPath %}
                <div class="mt-2 text-sm text-gray-600">Logo actuel :</div>
                <img src="/{{ app.user.company.logoPath }}" alt="Logo" class="mt-2 h-16">
            {% endif %}
        </div>

        <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white rounded hover:bg-blue-700 font-bold">
            Enregistrer
        </button>

        {{ form_end(form) }}
    </div>
{% endblock %}
