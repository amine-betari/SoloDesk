{% extends 'base.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto py-8">
        <h1 class="text-3xl font-bold mb-6 text-white">Liste des clients</h1>

        {% if pagination.items is not empty %}
            <div class="bg-gray-800 text-white shadow rounded-lg p-6 space-y-6">
                {% for client in pagination.items %}
                    <div class="bg-gray-700 p-4 rounded-lg hover:bg-gray-600 transition">
                        <dl class="grid grid-cols-2 gap-4">
                            <div>
                                <dt class="text-sm font-medium text-gray-300">Nom</dt>
                                <dd class="text-lg text-white">{{ client.name }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-300">Email</dt>
                                <dd class="text-lg text-white">{{ client.email }}</dd>
                            </div>
                            <div>
                                <dt class="text-sm font-medium text-gray-300">Pays</dt>
                                <dd class="text-lg text-white">{{ client.country }}</dd>
                            </div>
                            <div class="col-span-2">
                                <dt class="text-sm font-medium text-gray-300">Notes</dt>
                                <dd class="text-white whitespace-pre-line">{{ client.notes ?: '–' }}</dd>
                            </div>
                        </dl>

                        <div class="mt-3 flex space-x-3">
                            <a href="{{ path('app_client_show', {'id': client.id}) }}"
                               class="px-4 py-2 bg-blue-600 hover:bg-blue-500 rounded text-white text-sm">Voir</a>
                            <a href="{{ path('app_client_edit', {'id': client.id}) }}"
                               class="px-4 py-2 bg-indigo-600 hover:bg-indigo-500 rounded text-white text-sm">Modifier</a>
                            {{ include('client/_delete_form.html.twig') }}
                        </div>
                    </div>
                {% endfor %}
            </div>

            {# Pagination #}
            <div class="mt-4 flex justify-center space-x-2">
                {% for i in 1..pagination.pages %}
                    <a href="?page={{ i }}"
                       class="px-3 py-1 rounded {{ i == pagination.page ? 'bg-blue-600' : 'bg-gray-700 hover:bg-gray-600' }}">
                        {{ i }}
                    </a>
                {% endfor %}
            </div>
            <p class="mt-2 text-center text-gray-300 text-sm">
                Affichage de {{ pagination.items|length }} sur {{ pagination.total }} clients
            </p>
        {% else %}
            <p class="text-gray-300">Aucun client trouvé.</p>
        {% endif %}

        <div class="mt-6">
            <a href="{{ path('app_client_new') }}"
               class="inline-block px-6 py-2 bg-green-600 text-white rounded hover:bg-green-700 transition">
                Créer un nouveau client
            </a>
        </div>
    </div>
{% endblock %}
