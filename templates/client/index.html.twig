{% extends 'base.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto py-10 space-y-8">

        <h1 class="text-4xl font-bold text-white mb-6">Clients</h1>

        {# Si tu as un filtre, tu peux l'inclure ici, sinon supprime cette ligne #}
        {# {% include 'components/_filter_client_form.html.twig' with {'form': filterForm, 'action': path('app_client_index') } %} #}

        {% if pagination.items is not empty %}
            <div class="overflow-x-auto bg-gray-800 rounded-xl shadow-lg">
                <table class="min-w-full divide-y divide-gray-700">
                    <thead class="bg-gray-900">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Nom</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Email</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Pays</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Notes</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-400 uppercase tracking-wider">Actions</th>
                    </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-700">
                    {% for client in pagination.items %}
                        <tr class="hover:bg-gray-700 transition-colors cursor-pointer">
                            <td class="px-6 py-4 text-sm text-gray-300">{{ client.id }}</td>
                            <td class="px-6 py-4 text-sm font-semibold text-white">{{ client.name }}</td>
                            <td class="px-6 py-4 text-sm text-gray-300">{{ client.email }}</td>
                            <td class="px-6 py-4 text-sm text-gray-300">{{ client.country }}</td>
                            <td class="px-6 py-4 text-sm text-gray-300">{{ client.notes ?: '–' }}</td>
                            <td class="px-6 py-4 text-sm flex space-x-2">
                                <a href="{{ path('app_client_show', {'id': client.id}) }}"
                                   class="px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700 transition text-xs">Voir</a>
                                <a href="{{ path('app_client_edit', {'id': client.id}) }}"
                                   class="px-3 py-1 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition text-xs">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="px-6 py-4 text-center text-gray-400">Aucun client trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Pagination #}
            <div class="mt-4 flex justify-center space-x-2">
                {% for i in 1..pagination.pages %}
                    <a href="?page={{ i }}"
                       class="px-3 py-1 rounded {{ i == pagination.page ? 'bg-blue-600' : 'bg-gray-700 hover:bg-gray-600' }}">
                        {{ i }}
                    </a>
                {% endfor %}
            </div>
            <p class="mt-2 text-center text-gray-300 text-sm">
                Affichage de {{ pagination.items|length }} sur {{ pagination.total }} clients
            </p>
        {% else %}
            <p class="text-gray-300">Aucun client trouvé.</p>
        {% endif %}

        <div class="mt-6 text-right">
            <a href="{{ path('app_client_new') }}"
               class="inline-block px-6 py-3 bg-green-600 text-white rounded hover:bg-blue-700 transition">
                Nouveau client
            </a>
        </div>
    </div>
{% endblock %}
