<div class="max-w-6xl mx-auto mt-10 bg-gray-900 p-8 rounded-xl shadow-xl text-white">
    <h1 class="text-3xl font-bold mb-6">Créer un client</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

    <fieldset class="space-y-4 p-6 bg-gray-800 rounded-lg shadow-inner border border-gray-700">
        <legend class="text-xl font-semibold mb-4 text-gray-200">Informations du client</legend>

        <div>
            {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-200'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-600 bg-gray-700 text-white placeholder-gray-400'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div>
            {{ form_label(form.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-200'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-600 bg-gray-700 text-white placeholder-gray-400'}}) }}
            {{ form_errors(form.email) }}
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
                {{ form_label(form.country, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-200'}}) }}
                {{ form_widget(form.country, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-600 bg-gray-700 text-white placeholder-gray-400'}}) }}
                {{ form_errors(form.country) }}
            </div>

            <div>
                {{ form_label(form.currency, 'Devise', {'label_attr': {'class': 'block text-sm font-medium text-gray-200'}}) }}
                {{ form_widget(form.currency, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-600 bg-gray-700 text-white placeholder-gray-400'}}) }}
                {{ form_errors(form.currency) }}
            </div>
        </div>

        <div>
            {{ form_label(form.firstContactAt, 'Premier Contact', {'label_attr': {'class': 'block text-sm font-medium text-gray-200'}}) }}
            {{ form_widget(form.firstContactAt, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-600 bg-gray-700 text-white placeholder-gray-400'}}) }}
            {{ form_errors(form.firstContactAt) }}
        </div>

        <div>
            {{ form_label(form.notes, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-200'}}) }}
            {{ form_widget(form.notes, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-600 bg-gray-700 text-white placeholder-gray-400'}}) }}
            {{ form_errors(form.notes) }}
        </div>
    </fieldset>

    <div class="flex justify-end mt-6">
        <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg shadow-md">
            Enregistrer
        </button>
    </div>

    {{ form_end(form) }}

    {% if button_label is defined  %}
    <div class="flex space-x-4">
        <a href="{{ path('app_client_index') }}"
        class="px-4 py-2 bg-gray-700 hover:bg-gray-600 rounded text-white">← Retour à la liste</a>

        {{ include('client/_delete_form.html.twig') }}
    </div>
    {% else %}
        <a href="{{ path('app_client_index') }}"
           class="px-4 py-2 bg-gray-700 hover:bg-gray-600 rounded text-white">← Retour à la liste</a>
    {% endif %}
</div>
