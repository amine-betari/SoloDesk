{% extends 'base.html.twig' %}

{% block title %}Détails du client{% endblock %}

{% block body %}
    <div class="w-full px-6 py-8">
        <div class="space-y-6">
            <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
                <div>
                    <h1 class="text-3xl sm:text-4xl font-bold text-white">Client : {{ client.name }}</h1>
                    <p class="text-sm text-gray-400 mt-2">Vue d’ensemble des informations et projets liés.</p>
                </div>
                <div class="flex flex-col sm:flex-row gap-3 w-full sm:w-auto">
                    <a href="{{ path('app_client_index') }}"
                       class="px-4 py-2 bg-[#223044] hover:bg-[#2E415B] rounded text-white btn-mobile">← Retour</a>
                    <a href="{{ path('app_client_edit', {'id': client.id}) }}"
                       class="px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded text-white font-semibold btn-mobile">Modifier</a>
                    {{ include('client/_delete_form.html.twig') }}
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-white rounded-2xl p-6 shadow-md">
                    <h2 class="text-sm font-semibold text-gray-500 mb-2">Email</h2>
                    <p class="text-gray-900 text-xl">{{ client.email ?: '—' }}</p>
                </div>
                <div class="bg-white rounded-2xl p-6 shadow-md">
                    <h2 class="text-sm font-semibold text-gray-500 mb-2">Pays</h2>
                    <p class="text-gray-900 text-xl">{{ client.country ?: '–' }}</p>
                </div>
                <div class="bg-white rounded-2xl p-6 shadow-md">
                    <h2 class="text-sm font-semibold text-gray-500 mb-2">Nombre de projets</h2>
                    <p class="text-gray-900 text-xl">{{ projectsCount }}</p>
                </div>
            </div>

            {% if client.notes is not null %}
                <div class="bg-white rounded-2xl p-6 shadow-md">
                    <h2 class="text-xl font-bold text-gray-900 mb-4">Notes</h2>
                    {# <p class="text-gray-700 whitespace-pre-line ck-content prose max-w-none">{{ client.notes|raw ?: 'Aucune note disponible.' }}</p> #}
                    <p class="text-gray-700">{{ client.notes|sanitize_html ?: 'Aucune note disponible.' }}</p>
                </div>
            {% endif %}

            {% if projectsCount > 0 %}
                <div class="bg-white rounded-2xl p-6 shadow-md">
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">Projets du client</h2>
                    <div class="overflow-x-auto table-responsive">
                        <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-100">
                            <tr>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Nom</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Début</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Fin</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Statut</th>
                                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                            </tr>
                            </thead>
                            <tbody class="divide-y divide-gray-200">
                            {% for project in client.projects %}
                                <tr class="hover:bg-gray-50 transition-colors cursor-pointer">
                                    <td class="px-6 py-4 text-sm text-gray-900">{{ project.id }}</td>
                                    <td class="px-6 py-4 text-sm font-semibold text-gray-900">{{ project.name }}</td>
                                    <td class="px-6 py-4 text-sm text-gray-700">{{ project.startDate ? project.startDate|date('d/m/Y') : '–' }}</td>
                                    <td class="px-6 py-4 text-sm text-gray-700">{{ project.endDate ? project.endDate|date('d/m/Y') : '–' }}</td>
                                    <td class="px-6 py-4">
                                        {% set statusColors = {
                                            'En cours': 'bg-yellow-100 text-yellow-800',
                                            'Terminé': 'bg-green-100 text-green-800',
                                            'Annulé': 'bg-red-100 text-red-800'
                                        } %}
                                        <span class="px-3 py-1 rounded-full text-xs font-semibold {{ statusColors[project.status]|default('bg-gray-100 text-gray-800') }}">
                                            {{ project.status|trans }}
                                        </span>
                                    </td>
                                    <td class="px-6 py-4 flex flex-col sm:flex-row gap-2">
                                    <a href="{{ path('app_project_show', {'id': project.id}) }}"
                                       class="px-3 py-1 rounded bg-gray-100 text-gray-700 text-xs font-semibold hover:bg-gray-200 transition btn-mobile">Voir</a>
                                    <a href="{{ path('app_project_edit', {'id': project.id}) }}"
                                       class="px-3 py-1 rounded bg-blue-600 text-white text-xs font-semibold hover:bg-blue-700 transition btn-mobile">Modifier</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
