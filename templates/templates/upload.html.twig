{% extends 'base.html.twig' %}
{% block title %}Uploader un modèle{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto mt-10 bg-gray-800 p-8 rounded-lg shadow-lg text-white">
        <h1 class="text-3xl font-bold mb-6">Uploader un modèle</h1>
        {{ form_start(form, {
            'attr': {
                'enctype':'multipart/form-data',
                'class':'space-y-4'
                }
        }) }}
        <fieldset class="mb-6 p-4 border rounded bg-gray-700">
            <legend class="text-lg font-semibold mb-4">Informations générales</legend>
            <div>
                {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium'}}) }}
                {{ form_widget(form.name, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-300 text-black'}}) }}
                {{ form_errors(form.name) }}
            </div>
            <div>
                {{ form_label(form.type, null, {'label_attr': {'class': 'block text-sm font-medium'}}) }}
                {{ form_widget(form.type, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-300 text-black'}}) }}
                {{ form_errors(form.type) }}
            </div>
            <div>
                {{ form_label(form.format, null, {'label_attr': {'class': 'block text-sm font-medium'}}) }}
                {{ form_widget(form.format, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-300 text-black'}}) }}
                {{ form_errors(form.format) }}
            </div>
            <div>
                {{ form_label(form.file, null, {'label_attr': {'class': 'block text-sm font-medium'}}) }}
                {{ form_widget(form.file, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-300 text-black'}}) }}
                {{ form_errors(form.file) }}
            </div>
            <div>
                {{ form_label(form.isDefault, null, {'label_attr': {'class': 'block text-sm font-medium'}}) }}
                {{ form_widget(form.isDefault, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-300 text-black'}}) }}
                {{ form_errors(form.isDefault) }}

            </div>
            <div class="flex justify-end">
                <button class="px-4 py-2 bg-blue-600 text-white rounded">Enregistrer</button>
            </div>
        </fieldset>
        {{ form_end(form) }}
    </div>
{% endblock %}
