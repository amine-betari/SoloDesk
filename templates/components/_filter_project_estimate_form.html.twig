<div class="w-full p-6 bg-white rounded-xl shadow-xl mb-6">
    {{ form_start(form, {'action': action}) }}

    <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
            {{ form_label(form.client, 'Client', {'label_attr': {'class': 'font-semibold text-gray-700'}}) }}
            {{ form_widget(form.client, {'attr': {'class': 'w-full'}}) }}
        </div>
        <div>
            {{ form_label(form.startDate, 'Date de d√©but', {'label_attr': {'class': 'font-semibold text-gray-700'}}) }}
            {{ form_widget(form.startDate, {'attr': {'class': 'w-full rounded border border-gray-300 p-2 text-gray-900'}}) }}
        </div>
        <div>
            {{ form_label(form.endDate, 'Date de fin', {'label_attr': {'class': 'font-semibold text-gray-700'}}) }}
            {{ form_widget(form.endDate, {'attr': {'class': 'w-full rounded border border-gray-300 p-2 text-gray-900'}}) }}
        </div>
        <div class="flex flex-col sm:flex-row sm:items-end gap-2">
            {{ form_widget(form.search, {'attr': {'class': 'px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition'}}) }}
            {{ form_widget(form.reset, {'attr': {'class': 'px-4 py-2 bg-gray-400 text-gray-900 rounded hover:bg-gray-300 transition'}}) }}
        </div>
    </div>

    {{ form_end(form) }}

    <style>
        .ts-wrapper{ width:100% !important; }
        .ts-wrapper .ts-control{
            min-height:42px !important;
            height:42px !important;
            padding:8px 12px !important;     /* py-2 px-3 */
            display:flex !important;
            align-items:center !important;
            border:1px solid #d1d5db !important; /* gray-300 */
            border-radius:.375rem !important;    /* rounded-md */
            box-shadow:none !important;
        }
        .ts-wrapper .ts-control > input{
            height:1.25rem !important;
            padding:0 !important;
            margin:0 !important;
        }
    </style>
</div>
