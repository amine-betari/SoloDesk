<div class="bg-white p-4 rounded-xl mb-6 shadow-md">
    {{ form_start(form, {
        'action': action
    }) }}

    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">

        <!-- Type + Status -->
        <div data-controller="status-filter" class="flex gap-4 md:col-span-3">
            <div class="flex-1">
                {{ form_label(form.type, 'Type', {'label_attr': {'class': 'font-semibold text-gray-700'}}) }}
                {{ form_widget(form.type, {
                    'attr': {
                        'class': 'w-full rounded border border-gray-300 p-2 text-gray-900',
                        'data-status-filter-target': 'type'
                    }
                }) }}
            </div>

            <div class="flex-1">
                {{ form_label(form.status, 'Statut', {'label_attr': {'class': 'font-semibold text-gray-700'}}) }}
                {{ form_widget(form.status, {
                    'attr': {
                        'class': 'w-full rounded border border-gray-300 p-2 text-gray-900',
                        'data-status-filter-target': 'status'
                    }
                }) }}
            </div>
            <div class="flex-1">
                {{ form_label(form.client, 'Client', {'label_attr': {'class': 'font-semibold text-gray-700'}}) }}
                {{ form_widget(form.client, {
                    'attr': {
                        'class': 'w-full',
                        'data-status-filter-target': 'client'
                    }
                }) }}
            </div>
            <div class="flex-1">
                {{ form_label(form.externalInvoice, 'Facture externe', {'label_attr': {'class': 'font-semibold text-gray-700'}}) }}
                {{ form_widget(form.externalInvoice, {
                    'attr': {
                        'class': 'w-full rounded border border-gray-300 p-2 text-gray-900',
                        'data-status-filter-target': 'externalInvoice'
                    }
                }) }}
            </div>
        </div>

        <!-- Boutons Ã  droite -->
        <div class="flex justify-end space-x-2">
            {{ form_widget(form.search, {
                'attr': {
                    'class': 'px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition'
                }
            }) }}
            {{ form_widget(form.reset, {
                'attr': {
                    'class': 'px-4 py-2 bg-gray-400 text-gray-900 rounded hover:bg-gray-300 transition'
                }
            }) }}
        </div>

    </div>
    <style>

        .ts-wrapper{ width:100% !important; }
        .ts-wrapper .ts-control{
            min-height:42px !important;
            height:42px !important;
            padding:8px 12px !important;     /* py-2 px-3 */
            display:flex !important;
            align-items:center !important;
            border:1px solid #d1d5db !important; /* gray-300 */
            border-radius:.375rem !important;    /* rounded-md */
            box-shadow:none !important;
        }
        .ts-wrapper .ts-control > input{
            height:1.25rem !important;
            padding:0 !important;
            margin:0 !important;
        }
    </style>



    {{ form_end(form) }}
</div>
