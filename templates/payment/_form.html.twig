<div class="max-w-2xl mx-auto mt-10 bg-gray-800 p-8 rounded-lg shadow-lg text-white">
    <h1 class="text-3xl font-bold mb-6">Créer un paiement</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

    <div>
        {{ form_label(form.date, null, {'label_attr': {'class': 'block text-sm font-medium'}}) }}
        {{ form_widget(form.date, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-300 text-black'}}) }}
        {{ form_errors(form.date) }}
    </div>

    <div>
        {{ form_label(form.amount, 'Montant HT', {'label_attr': {'class': 'block text-sm font-medium'}}) }}
        {{ form_widget(form.amount, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-300 text-black'}}) }}
        {{ form_errors(form.amount) }}
    </div>

    <div>
        {{ form_label(form.label, 'Libellé (LOT...)', {'label_attr': {'class': 'block text-sm font-medium'}}) }}
        {{ form_widget(form.label, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-300 text-black'}}) }}
        {{ form_errors(form.label) }}
    </div>


    <div>
        {{ form_label(form.method, 'Méthode de paiement', {'label_attr': {'class': 'block text-sm font-medium'}}) }}
        {{ form_widget(form.method, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-300 text-black'}}) }}
        {{ form_errors(form.method) }}
    </div>

    <div>
        {{ form_label(form.invoiceReference, 'Référence de facture', {'label_attr': {'class': 'block text-sm font-medium'}}) }}
        {{ form_widget(form.invoiceReference, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-300 text-black'}}) }}
        {{ form_errors(form.invoiceReference) }}
    </div>

    <div class="flex justify-end">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Enregistrer
        </button>
    </div>

    {{ form_end(form) }}
</div>
