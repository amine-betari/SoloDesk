<div class="w-full mt-12 p-8 bg-white text-gray-900 rounded-xl shadow-xl">

    {% if button_label is defined  %}
        <h1 class="text-4xl font-extrabold mb-8">Modifier le paiement</h1>
    {% else %}
        <h1 class="text-4xl font-extrabold mb-8">Enregistrer un paiement</h1>
    {% endif %}

    {{ form_start(form, {'attr': {'class': 'space-y-8'}}) }}

    <!-- Informations du paiement -->
    <fieldset class="bg-white p-6 rounded-lg space-y-6 shadow-inner border border-gray-200">
        <legend class="text-2xl font-semibold text-gray-900">Informations du paiement</legend>

        <div class="space-y-2">
            {{ form_label(form.date, 'Date', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.date, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-300 bg-gray-50 text-gray-900 placeholder-gray-400'}}) }}
            {{ form_errors(form.date, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>

        <div class="space-y-2">
            {{ form_label(form.amount, 'Montant', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.amount, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-300 bg-gray-50 text-gray-900 placeholder-gray-400'}}) }}
            {{ form_errors(form.amount, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>

        <div class="space-y-2">
            {{ form_label(form.label, 'Libellé (LOT...)', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.label, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-300 bg-gray-50 text-gray-900 placeholder-gray-400'}}) }}
            {{ form_errors(form.label, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>

        <div class="space-y-2">
            {{ form_label(form.method, 'Méthode de paiement', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.method, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-300 bg-gray-50 text-gray-900 placeholder-gray-400'}}) }}
            {{ form_errors(form.method, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>

        <div class="space-y-2">
            {{ form_label(form.salesDocument, 'Facture liée', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.salesDocument, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-300 bg-gray-50 text-gray-900 placeholder-gray-400'}}) }}
            {{ form_errors(form.salesDocument, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>

        <div class="space-y-2">
            {{ form_label(form.invoiceReference, 'Référence facultative si pas de facture liée', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(form.invoiceReference, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-300 bg-gray-50 text-gray-900 placeholder-gray-400'}}) }}
            {{ form_errors(form.invoiceReference, {'attr': {'class': 'text-red-500 text-sm mt-1'}}) }}
        </div>
    </fieldset>

    <!-- Bouton -->
    <div class="flex justify-end mt-6">
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition-colors">Enregistrer</button>
    </div>

    {{ form_end(form) }}

    {% if button_label is defined  %}
        <div class="flex space-x-4 mt-4">
            <a href="{{ path('app_payment_index') }}"
               class="px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded text-gray-900">← Retour à la liste</a>

            {{ include('payment/_delete_form.html.twig') }}
        </div>
    {% else %}
        <a href="{{ path('app_payment_index') }}"
           class="px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded text-gray-900 mt-4 inline-block">← Retour à la liste</a>
    {% endif %}
</div>
