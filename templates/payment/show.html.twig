{% extends 'base.html.twig' %}

{% block title %}Paiement n°{{ payment.id }}{% endblock %}

{% block body %}
    <div class="max-w-2xl mx-auto py-8">
        <h1 class="text-2xl font-bold mb-6">Détails du paiement</h1>

        <div class="bg-white shadow rounded p-6 mb-6">
            <dl class="grid grid-cols-2 gap-4">
                <div>
                    <dt class="text-sm font-medium text-gray-500">ID</dt>
                    <dd class="text-lg text-gray-900">{{ payment.id }}</dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Date</dt>
                    <dd class="text-lg text-gray-900">
                        {{ payment.date ? payment.date|date('d/m/Y H:i') : 'Non renseignée' }}
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Montant</dt>
                    <dd class="text-lg text-gray-900">
                        {{ payment.amount|number_format(2, ',', ' ') }} €
                    </dd>
                </div>
                <div>
                    <dt class="text-sm font-medium text-gray-500">Méthode</dt>
                    <dd class="text-lg text-gray-900">{{ payment.method }}</dd>
                </div>
                <div class="col-span-2">
                    <dt class="text-sm font-medium text-gray-500">Libellé</dt>
                    <dd class="text-lg text-gray-900">{{ payment.label ?: '—' }}</dd>
                </div>
            </dl>
        </div>

        <div class="flex space-x-4">
            <a href="{{ path('app_payment_index') }}"
               class="text-sm text-gray-600 hover:underline">← Retour à la liste</a>

            <a href="{{ path('app_payment_edit', {'id': payment.id}) }}"
               class="text-sm text-blue-600 hover:underline">Modifier</a>

            {{ include('payment/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
