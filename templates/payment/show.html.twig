{% extends 'base.html.twig' %}

{% block title %}Paiement n°{{ payment.id }}{% endblock %}

{% block body %}
    <div class="w-full mt-10 p-8 bg-white text-gray-900 rounded-xl shadow-xl">

        <div class="flex justify-between items-center mb-8">
            <h1 class="text-4xl font-extrabold">Paiement n°{{ payment.id }}</h1>
            <div class="flex space-x-3">
                <a href="{{ path('app_payment_index') }}"
                   class="px-5 py-2 bg-gray-200 hover:bg-gray-300 rounded text-gray-900 text-sm transition-colors">← Retour</a>
                <a href="{{ path('app_payment_edit', {'id': payment.id}) }}"
                   class="px-5 py-2 bg-blue-600 hover:bg-blue-700 rounded text-white text-sm transition-colors">Modifier</a>
                {{ include('payment/_delete_form.html.twig') }}
            </div>
        </div>

        {# Informations générales #}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div class="bg-white rounded-xl p-6 shadow-md">
                <h2 class="text-lg font-semibold text-gray-500 mb-2">ID</h2>
                <p class="text-gray-900 text-xl">{{ payment.id }}</p>
            </div>
            <div class="bg-white rounded-xl p-6 shadow-md">
                <h2 class="text-lg font-semibold text-gray-500 mb-2">Date</h2>
                <p class="text-gray-900 text-xl">{{ payment.date ? payment.date|date('d/m/Y') : 'Non renseignée' }}</p>
            </div>
            <div class="bg-white rounded-xl p-6 shadow-md">
                <h2 class="text-lg font-semibold text-gray-500 mb-2">Montant</h2>
                <p class="text-gray-900 text-xl">{{ payment.amount|number_format(2, ',', ' ') }} €</p>
            </div>
            <div class="bg-white rounded-xl p-6 shadow-md">
                <h2 class="text-lg font-semibold text-gray-500 mb-2">Méthode</h2>
                <p class="text-gray-900 text-xl">{{ payment.method }}</p>
            </div>
            <div class="col-span-1 md:col-span-2 bg-white rounded-xl p-6 shadow-md">
                <h2 class="text-lg font-semibold text-gray-500 mb-2">Libellé</h2>
                <p class="text-gray-900 text-xl">{{ payment.label ?: '—' }}</p>
            </div>
            {% if payment.salesDocument %}
                <div class="col-span-1 md:col-span-2 bg-white rounded-xl p-6 shadow-md">
                    <h2 class="text-lg font-semibold text-gray-500 mb-2">Référence facture</h2>
                    <p class="text-gray-900 text-xl">{{ payment.salesDocument }}</p>
                </div>
            {% endif %}
            {% if payment.invoiceReference %}
                <div class="col-span-1 md:col-span-2 bg-white rounded-xl p-6 shadow-md">
                    <h2 class="text-lg font-semibold text-gray-500 mb-2">Référence facture</h2>
                    <p class="text-gray-900 text-xl">{{ payment.invoiceReference }}</p>
                </div>
            {% endif %}
        </div>

    </div>
{% endblock %}
