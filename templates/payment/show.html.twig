{% extends 'base.html.twig' %}

{% block title %}Paiement n°{{ payment.id }}{% endblock %}

{% block body %}
    <div class="w-full px-6 py-8">
        <div class="space-y-6">
            <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
                <div>
                    <h1 class="text-3xl sm:text-4xl font-bold text-white">Paiement n°{{ payment.id }}</h1>
                    <p class="text-sm text-gray-400 mt-2">Détails du paiement et lien avec le document.</p>
                </div>
                <div class="flex flex-col sm:flex-row gap-3 w-full sm:w-auto">
                    <a href="{{ path('app_payment_index') }}"
                       class="px-4 py-2 bg-[#223044] hover:bg-[#2E415B] rounded text-white text-sm transition-colors btn-mobile">← Retour</a>
                    <a href="{{ path('app_payment_edit', {'id': payment.id}) }}"
                       class="px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded text-white text-sm font-semibold transition-colors btn-mobile">Modifier</a>
                    {{ include('payment/_delete_form.html.twig') }}
                </div>
            </div>

            {# Informations générales #}
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-white rounded-2xl p-6 shadow-md">
                    <h2 class="text-sm font-semibold text-gray-500 mb-2">ID</h2>
                    <p class="text-gray-900 text-xl">{{ payment.id }}</p>
                </div>
                <div class="bg-white rounded-2xl p-6 shadow-md">
                    <h2 class="text-sm font-semibold text-gray-500 mb-2">Date</h2>
                    <p class="text-gray-900 text-xl">{{ payment.date ? payment.date|date('d/m/Y') : 'Non renseignée' }}</p>
                </div>
                <div class="bg-white rounded-2xl p-6 shadow-md">
                    <h2 class="text-sm font-semibold text-gray-500 mb-2">Montant</h2>
                    <p class="text-gray-900 text-xl">{{ payment.amount|format_currency(payment.salesDocument.client.currency, app.request.locale ?: 'fr_FR') }}</p>
                </div>
                <div class="bg-white rounded-2xl p-6 shadow-md">
                    <h2 class="text-sm font-semibold text-gray-500 mb-2">Méthode</h2>
                    <p class="text-gray-900 text-xl">{{ payment.method }}</p>
                </div>
                <div class="col-span-1 md:col-span-2 bg-white rounded-2xl p-6 shadow-md">
                    <h2 class="text-sm font-semibold text-gray-500 mb-2">Libellé</h2>
                    <p class="text-gray-900 text-xl">{{ payment.label ?: '—' }}</p>
                </div>
                {% if payment.salesDocument %}
                    <div class="col-span-1 md:col-span-2 bg-white rounded-2xl p-6 shadow-md">
                        <h2 class="text-sm font-semibold text-gray-500 mb-2">Référence facture</h2>
                        <p class="text-gray-900 text-xl">
                            <a href="{{ path('app_sales_document_show', { id: payment.salesDocument.id }) }}" class="flex-1 flex items-center gap-4 text-gray-900 no-underline hover:underline">
                                {{ payment.salesDocument }}
                            </a>
                        </p>
                    </div>
                {% endif %}
                {% if payment.invoiceReference %}
                    <div class="col-span-1 md:col-span-2 bg-white rounded-2xl p-6 shadow-md">
                        <h2 class="text-sm font-semibold text-gray-500 mb-2">Référence facture</h2>
                        <p class="text-gray-900 text-xl">{{ payment.invoiceReference }}</p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
