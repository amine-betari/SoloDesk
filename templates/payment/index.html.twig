{% extends 'base.html.twig' %}

{% block title %}Liste des paiements{% endblock %}

{% block body %}
    <div class="w-full px-6 py-8">
        <div class="space-y-6">
            <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
                <div>
                    <h1 class="text-3xl sm:text-4xl font-bold text-white">Paiements</h1>
                    <p class="text-sm text-gray-400 mt-2">Suivez les encaissements et leur rattachement aux documents.</p>
                </div>
                <div class="flex items-center gap-3">
                    <div class="hidden sm:flex items-center gap-2 rounded-full bg-[#1F2732] border border-[#2A3747] px-4 py-2 text-sm text-gray-300">
                        <span class="text-gray-500">Total</span>
                        <span class="text-white font-semibold">{{ pagination.total }}</span>
                    </div>
                    <a href="{{ path('app_payment_new') }}"
                       class="inline-flex items-center justify-center px-5 py-3 bg-emerald-500 hover:bg-emerald-600 text-white font-semibold rounded-lg transition-colors btn-mobile">
                        Enregistrer un paiement
                    </a>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="rounded-2xl border border-[#2A3747] bg-[#1F2732] p-4">
                    <div class="text-xs uppercase tracking-wider text-gray-400">Paiements affichés</div>
                    <div class="mt-2 text-2xl font-semibold text-white">{{ pagination.items|length }}</div>
                </div>
                <div class="rounded-2xl border border-[#2A3747] bg-[#1F2732] p-4">
                    <div class="text-xs uppercase tracking-wider text-gray-400">Paiements au total</div>
                    <div class="mt-2 text-2xl font-semibold text-white">{{ pagination.total }}</div>
                </div>
                <div class="rounded-2xl border border-[#2A3747] bg-[#1F2732] p-4">
                    <div class="text-xs uppercase tracking-wider text-gray-400">Page</div>
                    <div class="mt-2 text-2xl font-semibold text-white">{{ pagination.page }} / {{ pagination.pages }}</div>
                </div>
            </div>

            {# Filtre paiements #}
            {% include 'components/_filter_payment_form.html.twig' with {'form': filterForm, 'action': path('app_payment_index') } %}

            {% if pagination.items is not empty %}
                <div class="overflow-x-auto table-responsive rounded-2xl border border-gray-200 bg-white shadow-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Paiement</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500 hidden md:table-cell">Méthode</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Montant</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500 hidden lg:table-cell">Libellé</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500 hidden lg:table-cell">Référence</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Actions</th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                        {% for payment in pagination.items %}
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="min-w-0">
                                        <div class="text-sm font-semibold text-gray-900">#{{ payment.id }}</div>
                                        <div class="text-xs text-gray-500">{{ payment.date ? payment.date|date('d/m/Y') : '-' }}</div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-600 hidden md:table-cell">{{ payment.method }}</td>
                                {% set paymentCurrency = payment.salesDocument ? (payment.salesDocument.getResolvedClient() ? payment.salesDocument.getResolvedClient().currency : (payment.salesDocument.project ? payment.salesDocument.project.currency : 'EUR')) : 'EUR' %}
                                <td class="px-6 py-4 text-sm text-gray-700">{{ payment.amount|format_currency(paymentCurrency, app.request.locale ?: 'fr_FR') }}</td>
                                <td class="px-6 py-4 text-sm text-gray-600 hidden lg:table-cell">{{ payment.label ?: '—' }}</td>
                                <td class="px-6 py-4 text-sm text-gray-600 hidden lg:table-cell">
                                    {% if payment.salesDocument %}
                                        <a href="{{ path('app_sales_document_show', {'id': payment.salesDocument.id}) }}" class="text-blue-600 hover:text-blue-700">
                                            {{ payment.salesDocument }}
                                        </a>
                                    {% else %}
                                        —
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 text-sm">
                                    <div class="hidden sm:flex flex-wrap gap-2">
                                        <a href="{{ path('app_payment_show', {'id': payment.id}) }}"
                                           class="px-3 py-1.5 rounded-md bg-gray-100 text-gray-700 text-xs font-semibold hover:bg-gray-200 transition">
                                            Voir
                                        </a>
                                        <a href="{{ path('app_payment_edit', {'id': payment.id}) }}"
                                           class="px-3 py-1.5 rounded-md bg-blue-600 text-white text-xs font-semibold hover:bg-blue-700 transition">
                                            Modifier
                                        </a>
                                    </div>
                                    <div class="sm:hidden">
                                        <details class="relative">
                                            <summary class="inline-flex items-center gap-2 px-3 py-1.5 text-xs font-semibold rounded bg-gray-100 text-gray-700">
                                                Actions
                                            </summary>
                                            <div class="mt-2 flex flex-col gap-2">
                                                <a href="{{ path('app_payment_show', {'id': payment.id}) }}"
                                                   class="px-3 py-2 rounded bg-gray-100 text-gray-700 text-xs font-semibold hover:bg-gray-200">Voir</a>
                                                <a href="{{ path('app_payment_edit', {'id': payment.id}) }}"
                                                   class="px-3 py-2 rounded bg-blue-600 text-white text-xs font-semibold hover:bg-blue-700">Modifier</a>
                                            </div>
                                        </details>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="px-6 py-10 text-center text-gray-400">Aucun paiement trouvé</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="flex flex-wrap items-center justify-between gap-4">
                    <p class="text-sm text-gray-400">
                        Affichage de {{ pagination.items|length }} sur {{ pagination.total }} paiements
                    </p>
                    <div class="flex flex-wrap gap-2">
                        {% for i in 1..pagination.pages %}
                            <a href="?page={{ i }}"
                               class="px-3 py-1.5 rounded-lg text-sm font-medium {{ i == pagination.page ? 'bg-blue-600 text-white' : 'bg-[#223044] text-gray-200 hover:bg-[#2E415B]' }}">
                                {{ i }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <div class="rounded-2xl border border-dashed border-[#2A3747] bg-[#111922] p-10 text-center">
                    <p class="text-gray-400 mb-4">Aucun paiement trouvé.</p>
                    <a href="{{ path('app_payment_new') }}"
                       class="inline-flex items-center justify-center px-5 py-3 bg-emerald-500 hover:bg-emerald-600 text-white font-semibold rounded-lg transition-colors btn-mobile">
                        Enregistrer votre premier paiement
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
