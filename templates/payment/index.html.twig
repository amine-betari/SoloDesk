{% extends 'base.html.twig' %}

{% block title %}Liste des paiements{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto py-10 space-y-8">

        <h1 class="text-4xl font-bold text-white mb-6">Paiements</h1>

        {% include 'components/_filter_payment_form.html.twig' with {'form': filterForm, 'action': path('app_payment_index') } %}

        {% if pagination.items is not empty %}
            <div class="overflow-x-auto bg-gray-800 rounded-xl shadow-lg">
                <table class="min-w-full divide-y divide-gray-700">
                    <thead class="bg-gray-900">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">ID</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Date</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Montant</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Méthode</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Libellé</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Référence</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Actions</th>
                    </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-700">
                    {% for payment in pagination.items %}
                        <tr class="hover:bg-gray-700">
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">{{ payment.id }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">
                                {{ payment.date ? payment.date|date('d/m/Y') : '-' }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">
                                {{ payment.amount|number_format(2, ',', ' ') }} €
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">{{ payment.method }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">{{ payment.label ?: '—' }}</td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">
                                <a href="{{ path('app_sales_document_show', {'id': payment.salesDocument.id}) }}" class="text-blue-400 hover:text-blue-200">{{ payment.salesDocument ?: '—' }}</a>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm flex space-x-2">
                                <a href="{{ path('app_payment_show', {'id': payment.id}) }}" class="text-blue-400 hover:text-blue-200">Voir</a>
                                <a href="{{ path('app_payment_edit', {'id': payment.id}) }}" class="text-indigo-400 hover:text-indigo-200">Modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="px-6 py-4 text-center text-gray-400">Aucun paiement trouvé</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            {# Pagination #}
            <div class="mt-4 flex justify-center space-x-2">
                {% for i in 1..pagination.pages %}
                    <a href="?page={{ i }}"
                       class="px-3 py-1 rounded {{ i == pagination.page ? 'bg-blue-600' : 'bg-gray-700 hover:bg-gray-600' }}">
                        {{ i }}
                    </a>
                {% endfor %}
            </div>
            <p class="mt-2 text-center text-gray-300 text-sm">
                Affichage de {{ pagination.items|length }} sur {{ pagination.total }} paiements
            </p>
        {% else %}
            <p class="text-gray-300">Aucun paiement trouvé.</p>
        {% endif %}

        <div class="mt-6 text-right">
            <a href="{{ path('app_payment_new') }}" class="inline-block px-6 py-3 bg-green-600 hover:bg-blue-700 rounded-lg text-white font-medium transition-colors">
                Enregistrer un paiement
            </a>
        </div>

    </div>
{% endblock %}
