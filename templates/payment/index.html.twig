{% extends 'base.html.twig' %}

{% block title %}Liste des paiements{% endblock %}

{% block body %}
    <div class="max-w-6xl mx-auto py-10 space-y-8">

        <h1 class="text-4xl font-bold text-white mb-6">Liste des paiements</h1>

        <div class="overflow-x-auto bg-gray-800 rounded-xl shadow-lg">
            <table class="min-w-full divide-y divide-gray-700">
                <thead class="bg-gray-900">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">ID</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Montant</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Méthode</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Libellé</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">Actions</th>
                </tr>
                </thead>
                <tbody class="divide-y divide-gray-700">
                {% for payment in payments %}
                    <tr class="hover:bg-gray-700">
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">{{ payment.id }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">
                            {{ payment.date ? payment.date|date('d/m/Y') : '-' }}
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">
                            {{ payment.amount|number_format(2, ',', ' ') }} €
                        </td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">{{ payment.method }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-200">{{ payment.label ?: '—' }}</td>
                        <td class="px-6 py-4 whitespace-nowrap text-sm">
                            <a href="{{ path('app_payment_show', {'id': payment.id}) }}" class="text-blue-400 hover:text-blue-200 mr-4">Voir</a>
                            <a href="{{ path('app_payment_edit', {'id': payment.id}) }}" class="text-indigo-400 hover:text-indigo-200">Modifier</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="px-6 py-4 text-center text-gray-400">Aucun paiement trouvé</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-6 flex justify-end">
            <a href="{{ path('app_payment_new') }}" class="inline-block px-6 py-3 bg-blue-600 hover:bg-blue-700 rounded-lg text-white font-medium transition-colors">
                Ajouter un paiement
            </a>
        </div>
    </div>
{% endblock %}
