{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <div class="w-full max-w-lg mx-auto mt-20 p-8 bg-white rounded-xl shadow-xl">
        <h1 class="text-3xl font-bold mb-6 text-gray-900">Créer un compte</h1>

        {{ form_start(registrationForm) }}

        <div class="mb-4">
            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'mt-1 w-full p-2 rounded-md border border-gray-300 bg-gray-50 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            <div class="text-sm text-red-600 mt-1">
                {{ form_errors(registrationForm.email) }}
            </div>
        </div>

        <div class="mb-4">
            {{ form_label(registrationForm.companyName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(registrationForm.companyName, {'attr': {'class': 'mt-1 w-full p-2 rounded-md border border-gray-300 bg-gray-50 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            <div class="text-sm text-red-600 mt-1">
                {{ form_errors(registrationForm.companyName) }}
            </div>
        </div>

        <div class="mb-4">
            {{ form_label(registrationForm.plainPassword, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'mt-1 w-full p-2 rounded-md border border-gray-300 bg-gray-50 text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
            <div class="text-sm text-red-600 mt-1">
                {{ form_errors(registrationForm.plainPassword) }}
            </div>
        </div>

        <button type="submit" class="w-full py-2 px-4 bg-blue-600 text-white rounded hover:bg-blue-700 font-bold">
            S’inscrire
        </button>

        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
