{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">CA par trimestre - {{ anneeSelectionnee }}</h1>

    <form method="get" class="mb-6">
        <label for="annee" class="mr-2">Choisir une ann√©e :</label>
        <select name="annee" id="annee" onchange="this.form.submit()" class="rounded border p-1">
            {% for y in annees %}
                <option value="{{ y }}" {% if y == anneeSelectionnee %}selected{% endif %}>{{ y }}</option>
            {% endfor %}
        </select>
    </form>



    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {% for quarter, chart in charts %}
            <div class="bg-white p-6 rounded-lg shadow hover:shadow-lg transition-shadow flex flex-col">
                <h2 class="text-lg font-semibold mb-3">{{ quarter }}</h2>
                <div class="flex-1">
                    {{ render_chart(chart) }}
                </div>
            </div>
        {% endfor %}
    </div>



{% endblock %}
