{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - SoloDesk{% endblock %}

{% block body %}

    <div class="bg-[#1F2732] border border-[#2A3747] rounded-xl p-6 mb-8">
        <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
            <div>
                <h2 class="text-xl font-bold text-white">Démarrage rapide</h2>
                <p class="text-sm text-gray-400 mt-1">Complète ces 3 étapes pour générer ta première facture.</p>
            </div>
            <a href="{{ path('app_settings') }}" class="px-4 py-2 bg-blue-600 text-white rounded font-semibold text-sm hover:bg-blue-700 btn-mobile">
                Paramètres
            </a>
        </div>
        <div class="mt-5 grid grid-cols-1 sm:grid-cols-3 gap-4">
            <a href="{{ path('app_company_edit') }}" class="group bg-[#16202A] border border-[#2A3747] rounded-lg p-4 hover:border-blue-500 transition">
                <div class="text-xs uppercase text-gray-500">Étape 1</div>
                <div class="text-white font-semibold mt-1">Configurer l’entreprise</div>
                <div class="text-sm text-gray-400 mt-2">Nom, logo, infos légales</div>
            </a>
            <a href="{{ path('app_client_new') }}" class="group bg-[#16202A] border border-[#2A3747] rounded-lg p-4 hover:border-blue-500 transition">
                <div class="text-xs uppercase text-gray-500">Étape 2</div>
                <div class="text-white font-semibold mt-1">Créer un client</div>
                <div class="text-sm text-gray-400 mt-2">Contact + devise</div>
            </a>
            <a href="{{ path('app_invoice_new') }}" class="group bg-[#16202A] border border-[#2A3747] rounded-lg p-4 hover:border-blue-500 transition">
                <div class="text-xs uppercase text-gray-500">Étape 3</div>
                <div class="text-white font-semibold mt-1">Créer une facture</div>
                <div class="text-sm text-gray-400 mt-2">Générer et envoyer</div>
            </a>
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-10">

        <!-- Clients -->
        <div class="bg-gray-50 p-6 rounded-lg shadow hover:shadow-lg transition-shadow">
            <h3 class="text-sm font-semibold text-gray-600 uppercase tracking-wide mb-4">
                Nouveaux clients par année
            </h3>
            {{ render_chart(clientDataChart) }}
        </div>

        <!-- Devis -->
        <div class="bg-gray-50 p-6 rounded-lg shadow hover:shadow-lg transition-shadow">
            <h3 class="text-sm font-semibold text-gray-600 uppercase tracking-wide mb-4">
                Suivi des devis
            </h3>
            {{ render_chart(estimateChart) }}
            <p class="text-sm text-gray-500 mt-2">Taux de conversion : Accepté / Envoyé / Refusé</p>
        </div>

        <!-- Factures -->
        <div class="bg-gray-50 p-6 rounded-lg shadow hover:shadow-lg transition-shadow">
            <h3 class="text-sm font-semibold text-gray-600 uppercase tracking-wide mb-4">
                Factures par année
            </h3>
            {{ render_chart(invoiceChart) }}
            <p class="text-sm text-gray-500 mt-2">
                Nombre total de factures émises par année — externes : {{ totalExternalInvoices }}
            </p>
        </div>

        <!-- CA par client -->
        <div class="bg-gray-50 p-6 rounded-lg shadow hover:shadow-lg transition-shadow">
            <h3 class="text-sm font-semibold text-gray-600 uppercase tracking-wide mb-4">
                Répartition du CA par client
            </h3>
            {{ render_chart(paymentsChart) }}
            <div class="mt-4">
                {% if hasPaymentsStats %}
                    <a href="{{ path('stats_ca_trimestre') }}"
                       class="text-blue-600 hover:underline text-sm font-medium btn-mobile inline-block">
                        Voir le CA par trimestre →
                    </a>
                {% endif %}

            </div>
        </div>

    </div>

    <!-- Stat cards -->
    {% include 'partials/_stats.html.twig' with {
        projectCount: totalProjects,
        clientCount: totalClients,
        estimateCount: totalEstimates,
        invoiceCount: totalInvoices
    } %}

{% endblock %}
