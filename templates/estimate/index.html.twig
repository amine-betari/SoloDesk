{% extends 'base.html.twig' %}

{% block title %}Liste des pré-estimations{% endblock %}

{% block body %}
    <div class="w-full px-6 py-8">
        <div class="space-y-6">
            <div class="flex flex-col gap-4 lg:flex-row lg:items-center lg:justify-between">
                <div>
                    <h1 class="text-3xl sm:text-4xl font-bold text-white">Pré‑Estimations</h1>
                    <p class="text-sm text-gray-400 mt-2">Suivez vos devis préliminaires, montants et statuts.</p>
                </div>
                <div class="flex items-center gap-3">
                    <div class="hidden sm:flex items-center gap-2 rounded-full bg-[#1F2732] border border-[#2A3747] px-4 py-2 text-sm text-gray-300">
                        <span class="text-gray-500">Total</span>
                        <span class="text-white font-semibold">{{ pagination.total }}</span>
                    </div>
                    <a href="{{ path('app_estimate_new') }}"
                       class="inline-flex items-center justify-center px-5 py-3 bg-emerald-500 hover:bg-emerald-600 text-white font-semibold rounded-lg transition-colors btn-mobile">
                        Nouvelle Pré‑Estimation
                    </a>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="rounded-2xl border border-[#2A3747] bg-[#1F2732] p-4">
                    <div class="text-xs uppercase tracking-wider text-gray-400">Affichées</div>
                    <div class="mt-2 text-2xl font-semibold text-white">{{ pagination.items|length }}</div>
                </div>
                <div class="rounded-2xl border border-[#2A3747] bg-[#1F2732] p-4">
                    <div class="text-xs uppercase tracking-wider text-gray-400">Total</div>
                    <div class="mt-2 text-2xl font-semibold text-white">{{ pagination.total }}</div>
                </div>
                <div class="rounded-2xl border border-[#2A3747] bg-[#1F2732] p-4">
                    <div class="text-xs uppercase tracking-wider text-gray-400">Page</div>
                    <div class="mt-2 text-2xl font-semibold text-white">{{ pagination.page }} / {{ pagination.pages }}</div>
                </div>
            </div>

            {% include 'components/_filter_project_estimate_form.html.twig' with {'form': filterForm, 'action': path('app_estimate_index') } %}

            {% if pagination.items is not empty %}
                <div class="overflow-x-auto table-responsive rounded-2xl border border-gray-200 bg-white shadow-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Pré‑estimation</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500 hidden md:table-cell">Client</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Montant</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Statut</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500 hidden lg:table-cell">Début</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500 hidden lg:table-cell">Projet</th>
                            <th class="px-6 py-4 text-left text-xs font-semibold uppercase tracking-wider text-gray-500">Actions</th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                        {% for estimate in pagination.items %}
                            <tr class="hover:bg-gray-50 transition-colors">
                                <td class="px-6 py-4">
                                    <div class="min-w-0">
                                        <a href="{{ path('app_estimate_show', {'id': estimate.id}) }}"
                                           class="text-sm font-semibold text-gray-900 hover:text-blue-600 transition-colors">
                                            {{ estimate.name }}
                                        </a>
                                        <div class="text-xs text-gray-500">#{{ estimate.estimateNumber }}</div>
                                    </div>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-600 hidden md:table-cell">{{ estimate.client ? estimate.client.name : '—' }}</td>
                                <td class="px-6 py-4 text-sm text-gray-700">
                                    {{ estimate.amount|format_currency(estimate.currency, app.request.locale ?: 'fr_FR') }}
                                </td>
                                <td class="px-6 py-4 text-sm">
                                    {% set color =
                                        estimate.status == 'draft' ? 'gray' :
                                        estimate.status == 'sent' ? 'indigo' :
                                        estimate.status == 'accepted' ? 'green' :
                                        estimate.status == 'rejected' ? 'red' : 'gray'
                                    %}
                                    <span class="px-2.5 py-1 rounded-full text-xs font-semibold bg-{{ color }}-100 text-{{ color }}-800">
                                        {{ estimate.status|trans }}
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-600 hidden lg:table-cell">
                                    {{ estimate.startDate ? estimate.startDate|date('d/m/Y') : '—' }}
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-600 hidden lg:table-cell">
                                    {% if estimate.project %}
                                        <a href="{{ path('app_project_show', {'id': estimate.project.id}) }}" class="text-blue-600 hover:text-blue-500">
                                            {{ estimate.project }}
                                        </a>
                                    {% else %}
                                        —
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 text-sm">
                                    <div class="hidden sm:flex flex-wrap gap-2">
                                        <a href="{{ path('app_estimate_show', {'id': estimate.id}) }}"
                                           class="px-3 py-1.5 rounded-md bg-gray-100 text-gray-700 text-xs font-semibold hover:bg-gray-200 transition">
                                            Voir
                                        </a>
                                        <a href="{{ path('app_estimate_edit', {'id': estimate.id}) }}"
                                           class="px-3 py-1.5 rounded-md bg-blue-600 text-white text-xs font-semibold hover:bg-blue-700 transition">
                                            Modifier
                                        </a>
                                    </div>
                                    <div class="sm:hidden">
                                        <details class="relative">
                                            <summary class="inline-flex items-center gap-2 px-3 py-1.5 text-xs font-semibold rounded bg-gray-100 text-gray-700">
                                                Actions
                                            </summary>
                                            <div class="mt-2 flex flex-col gap-2">
                                                <a href="{{ path('app_estimate_show', {'id': estimate.id}) }}"
                                                   class="px-3 py-2 rounded bg-gray-100 text-gray-700 text-xs font-semibold hover:bg-gray-200">Voir</a>
                                                <a href="{{ path('app_estimate_edit', {'id': estimate.id}) }}"
                                                   class="px-3 py-2 rounded bg-blue-600 text-white text-xs font-semibold hover:bg-blue-700">Modifier</a>
                                            </div>
                                        </details>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="px-6 py-10 text-center text-gray-400">Aucune pré‑estimation trouvée</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="flex flex-wrap items-center justify-between gap-4">
                    <p class="text-sm text-gray-400">
                        Affichage de {{ pagination.items|length }} sur {{ pagination.total }} pré‑estimations
                    </p>
                    <div class="flex flex-wrap gap-2">
                        {% for i in 1..pagination.pages %}
                            <a href="?page={{ i }}"
                               class="px-3 py-1.5 rounded-lg text-sm font-medium {{ i == pagination.page ? 'bg-blue-600 text-white' : 'bg-[#223044] text-gray-200 hover:bg-[#2E415B]' }}">
                                {{ i }}
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <div class="rounded-2xl border border-dashed border-[#2A3747] bg-[#111922] p-10 text-center">
                    <p class="text-gray-400 mb-4">Aucune pré‑estimation trouvée.</p>
                    <a href="{{ path('app_estimate_new') }}"
                       class="inline-flex items-center justify-center px-5 py-3 bg-emerald-500 hover:bg-emerald-600 text-white font-semibold rounded-lg transition-colors btn-mobile">
                        Créer votre première pré‑estimation
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
