{% extends 'base.html.twig' %}

{% block title %}Liste des estimates{% endblock %}

{% block body %}
    <h1 class="text-3xl font-bold mb-6">Liste des estimates</h1>

    <div class="overflow-x-auto">
        <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow">
            <thead class="bg-gray-50">
            <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">ID</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Référence</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Client</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Montant</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Statut</th>
               {#  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Date création</th> #}
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Date de début</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Projet lié</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider border-b">Actions</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
            {% for estimate in estimates %}
                <tr class="hover:bg-gray-100">
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ estimate.id }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900">{{ estimate.estimateNumber }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ estimate.client ? estimate.client.name : '-' }}</td>
                    {# <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ estimate.amount ? estimate.amount|number_format(2, '.', ',') ~ ' ' ~ (estimate.currency ?: '€') : '-' }}</td> #}
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ estimate.amount|format_currency(estimate.currency, app.request.locale ?: 'fr_FR') }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700 font-medium"> {{ estimate.status }} </td>
                   {#  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ estimate.createdAt ? estimate.createdAt|date('d/m/Y') : '-' }}</td> #}
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ estimate.startDate ? estimate.startDate|date('d/m/Y') : '-' }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700">{{ estimate.project ? estimate.project.name : '-' }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                        <a href="{{ path('app_estimate_show', {'id': estimate.id}) }}" class="text-blue-600 hover:text-blue-900 mr-4">Voir</a>
                        <a href="{{ path('app_estimate_edit', {'id': estimate.id}) }}" class="text-indigo-600 hover:text-indigo-900">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="px-6 py-4 text-center text-gray-500">Aucune estimate trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="mt-6">
        <a href="{{ path('app_estimate_new') }}" class="inline-block px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition">Créer une nouvelle estimate</a>
    </div>
{% endblock %}
