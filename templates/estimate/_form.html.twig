<div class="max-w-6xl mx-auto mt-12 bg-gray-900 p-8 rounded-xl shadow-xl text-white">

    {% if button_label is defined %}
        <h1 class="text-4xl font-extrabold mb-8">Modifier la Pré‑Estimation</h1>
    {% else %}
        <h1 class="text-4xl font-extrabold mb-8">Nouvelle Pré‑Estimation</h1>
    {% endif %}

    {{ form_start(form, {'attr': {'class': 'space-y-6', 'enctype': 'multipart/form-data'}}) }}

    <fieldset class="bg-gray-800 p-6 rounded-lg space-y-6">
        <legend class="text-lg font-semibold">Informations générales</legend>

        <div class="space-y-2">
            {{ form_label(form.client, 'Client', {'label_attr': {'class': 'block text-sm font-medium'}}) }}
            {{ form_widget(form.client, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-600 bg-gray-700 text-white'}}) }}
            {{ form_errors(form.client) }}
            <a href="{{ path('app_client_new') }}" class="text-blue-400 text-sm mt-1 inline-block">+ Ajouter un nouveau client</a>
        </div>

        {% if form.estimateNumber is defined %}
            <div class="space-y-2">
                {{ form_label(form.estimateNumber, 'Référence', {'label_attr': {'class': 'block text-sm font-medium text-white'}}) }}
                {{ form_widget(form.estimateNumber, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-600 bg-gray-700 text-white'}}) }}
                {{ form_errors(form.estimateNumber) }}
            </div>
        {% endif %}

        <div class="space-y-2">
            {{ form_label(form.name, 'Name', {'label_attr': {'class': 'block text-sm font-medium text-white'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-600 bg-gray-700 text-white'}}) }}
            {{ form_errors(form.name) }}
        </div>

        <div class="space-y-2">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-600 bg-gray-700 text-white'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="grid grid-cols-2 gap-4">
            <div>
                {{ form_label(form.startDate, 'Date de début', {'label_attr': {'class': 'block text-sm font-medium text-white'}}) }}
                {{ form_widget(form.startDate, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-600 bg-gray-700 text-white'}}) }}
                {{ form_errors(form.startDate) }}
            </div>
            <div>
                {{ form_label(form.endDate, 'Date de fin', {'label_attr': {'class': 'block text-sm font-medium text-white'}}) }}
                {{ form_widget(form.endDate, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-600 bg-gray-700 text-white'}}) }}
                {{ form_errors(form.endDate) }}
            </div>
        </div>

        <div class="space-y-2">
            {{ form_label(form.amount, 'Montant HT', {'label_attr': {'class': 'block text-sm font-medium'}}) }}
            {{ form_widget(form.amount, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-600 bg-gray-700 text-white'}}) }}
            {{ form_errors(form.amount) }}
        </div>

        <div data-controller="toggle-vat">
            <div class="flex items-center space-x-2 mb-4">
                {{ form_widget(form.noVat, {
                    'attr': {
                        'data-toggle-vat-target': 'checkbox',
                        'data-action': 'toggle-vat#toggle'
                    }
                }) }}
                {{ form_label(form.noVat, 'Pas de TVA', {'label_attr': {'class': 'text-sm text-white'}}) }}
            </div>

            <div data-toggle-vat-target="vat" class="mb-4">
                {{ form_label(form.vatRate, 'TVA (%)', {'label_attr': {'class': 'block text-sm font-medium text-white'}}) }}
                {{ form_widget(form.vatRate, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-600 bg-gray-700 text-white', 'step': '0.01'}}) }}
                {{ form_errors(form.vatRate) }}
            </div>
        </div>

        <div>
            {{ form_label(form.status, 'Statut', {'label_attr': {'class': 'block text-sm font-medium'}}) }}
            {{ form_widget(form.status, {'attr': {'class': 'mt-1 w-full rounded-md border-gray-600 bg-gray-700 text-white'}}) }}
            {{ form_errors(form.status) }}
        </div>

        {# Documents liés #}
        {% include 'partials/_documents_form.html.twig' with { form: form, relatedEntity: estimate } %}
        {# Documents liés #}

        <div class="flex justify-between items-center">
            <button class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">Enregistrer</button>
        </div>
    </fieldset>

    {{ form_end(form) }}

    {% if button_label is defined  %}
        <div class="flex space-x-4">
            <a href="{{ path('app_estimate_index') }}"
               class="px-4 py-2 bg-gray-700 hover:bg-gray-600 rounded text-white">← Retour à la liste</a>

            {{ include('estimate/_delete_form.html.twig') }}
        </div>
    {% else %}
        <a href="{{ path('app_estimate_index') }}"
           class="px-4 py-2 bg-gray-700 hover:bg-gray-600 rounded text-white">← Retour à la liste</a>
    {% endif %}
</div>
